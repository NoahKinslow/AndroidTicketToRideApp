<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tewesday.androidtickettorideapp.GameActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:context="tewesday.androidtickettorideapp.GameActivity"
        map:layout_constraintBottom_toTopOf="@+id/PlayerLayout0"
        map:layout_constraintRight_toRightOf="parent"
        map:layout_constraintLeft_toLeftOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintHorizontal_bias="0.0"
        map:layout_constraintVertical_bias="0.0" />

    <HorizontalScrollView
        android:layout_width="175dp"
        android:layout_height="55dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFFFFF">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/PlayerImage1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/defaultuser"
                android:contentDescription="Player1"/>
            <LinearLayout
                android:id="@+id/PlayerLayout1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/PlayerName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computer"
                    />
                <TextView
                    android:id="@+id/PlayerPoints1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Points"
                    />
                <TextView
                    android:id="@+id/PlayerTrains1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 Trains Left"
                    />
            </LinearLayout>
            <ImageView
                android:visibility="gone"
                android:id="@+id/PlayerImage2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/defaultuser"
                android:contentDescription="Player1"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/PlayerLayout2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/PlayerName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Name"
                    />
                <TextView
                    android:id="@+id/PlayerPoints2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 points"
                    />
                <TextView
                    android:id="@+id/PlayerTrains2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 Trains left"
                    />
            </LinearLayout>
            <ImageView
                android:visibility="gone"
                android:id="@+id/PlayerImage3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/defaultuser"
                android:contentDescription="Player1"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/PlayerLayout3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/PlayerName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Name"
                    />
                <TextView
                    android:id="@+id/PlayerPoints3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 points"
                    />
                <TextView
                    android:id="@+id/PlayerTrains3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 Trains left"
                    />
            </LinearLayout>
            <ImageView
                android:visibility="gone"
                android:id="@+id/PlayerImage4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/defaultuser"
                android:contentDescription="Player1"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/PlayerLayout4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/PlayerName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Name"
                    />
                <TextView
                    android:id="@+id/PlayerPoints4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 points"
                    />
                <TextView
                    android:id="@+id/PlayerTrains4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 Trains left"
                    />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/drawPile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addTicketClick"
        android:text="@string/add_tickets"/>

    <Button
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startGameClick"
        android:text="Start Game"/>

    <LinearLayout
        android:background="#FFFFFF"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/drawPile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/drawPileDeck"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:src="@drawable/carddeck"
            android:onClick="drawPileClick"
            />
        <ImageView
            android:id="@+id/drawPile1"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:src="@drawable/carddeck"
            android:onClick="drawPileClick"
            />
        <ImageView
            android:id="@+id/drawPile2"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:src="@drawable/carddeck"
            android:onClick="drawPileClick"
            />
        <ImageView
            android:id="@+id/drawPile3"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:src="@drawable/carddeck"
            android:onClick="drawPileClick"
            />
        <ImageView
            android:id="@+id/drawPile4"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:src="@drawable/carddeck"
            android:onClick="drawPileClick"
            />
        <ImageView
            android:id="@+id/drawPile5"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:src="@drawable/carddeck"
            android:onClick="drawPileClick"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/PlayerImage0"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:onClick="takeUserPhoto"
        android:src="@drawable/defaultuser"
        android:contentDescription="Player Image"
        app:layout_constraintTop_toBottomOf="@+id/map"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/PlayerLayout0"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/PlayerImage0">
        <TextView
            android:id="@+id/PlayerName0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            />
        <TextView
            android:id="@+id/PlayerPoints0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Points"
            />

        <TextView
            android:id="@+id/PlayerTrains0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45 Trains Left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/handLayout"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/PlayerLayout0">
        <Button
            android:id="@+id/handCard0"
            android:background="@drawable/handwild"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:onClick="handCardClick"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:text="0"
            android:textSize="25sp"
            />
         <Button
            android:id="@+id/handCard1"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/handred"
            android:onClick="handCardClick"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:text="0"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/handCard2"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/handblue"
            android:onClick="handCardClick"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:text="0"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/handCard3"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/handyellow"
            android:onClick="handCardClick"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:text="0"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/handCard4"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/handgreen"
            android:onClick="handCardClick"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:text="0"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/handCard5"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/handorange"
            android:onClick="handCardClick"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:text="0"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/handCard6"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/handpink"
            android:onClick="handCardClick"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:text="0"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/handCard7"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/handblack"
            android:onClick="handCardClick"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            />
        <Button
            android:id="@+id/handCard8"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:background="@drawable/handwhite"
            android:onClick="handCardClick"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:text="0"
            android:textSize="25sp"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/map"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ticketListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
